# API Configuration
# The URL of your FastAPI backend server
NEXT_PUBLIC_API_URL=http://localhost:8000

# Database URL for Better Auth (same as backend)
# Use the same Neon PostgreSQL URL as the backend
DATABASE_URL=postgresql://user:password@host/database?sslmode=require

# Better Auth Configuration
# Generate a secret with: openssl rand -base64 32
# IMPORTANT: Must match the backend's BETTER_AUTH_SECRET
BETTER_AUTH_SECRET=your-secret-key-here

# The URL where your Next.js app is hosted
BETTER_AUTH_URL=http://localhost:3000
NEXT_PUBLIC_BETTER_AUTH_URL=http://localhost:3000

# OpenAI ChatKit Configuration
# Create a workflow at https://platform.openai.com/chatkit
NEXT_PUBLIC_CHATKIT_WORKFLOW_ID=wf_replace_with_your_workflow_id

# OpenAI API Key (server-side only, for session creation)
OPENAI_API_KEY=sk-your-openai-api-key
