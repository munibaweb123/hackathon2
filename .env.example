# ===================================
# Environment Configuration Template
# ===================================
# Copy this file to .env and fill in your values
# NEVER commit .env files to version control

# -----------------------------------
# Application Environment
# -----------------------------------
ENVIRONMENT=development  # development, staging, production

# -----------------------------------
# Database Configuration
# -----------------------------------
DATABASE_URL=postgresql://todo_user:todo_password@localhost:5432/todo_db
DB_HOST=localhost
DB_PORT=5432
DB_NAME=todo_db
DB_USER=todo_user
DB_PASSWORD=todo_password

# -----------------------------------
# Backend Configuration (FastAPI)
# -----------------------------------
BACKEND_PORT=8000
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR
CORS_ORIGINS=*  # Comma-separated origins for production

# -----------------------------------
# Frontend Configuration (Next.js)
# -----------------------------------
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_APP_VERSION=v1.0.0
PORT=3000

# -----------------------------------
# Authentication (Better Auth)
# -----------------------------------
BETTER_AUTH_SECRET=dev-better-auth-secret-32-chars-min-CHANGE-ME
BETTER_AUTH_URL=http://localhost:3000
BETTER_AUTH_TRUST_HOST=true

# JWT Configuration
JWT_SECRET=dev-jwt-secret-must-be-32-chars-long-min-CHANGE-ME
JWT_ALGORITHM=HS256
JWT_EXPIRATION=3600  # seconds

# -----------------------------------
# Kubernetes Configuration
# -----------------------------------
K8S_NAMESPACE=default
HELM_RELEASE_NAME=todo-app

# Service URLs (Kubernetes DNS)
K8S_BACKEND_SERVICE=todo-backend
K8S_FRONTEND_SERVICE=todo-frontend
K8S_POSTGRES_SERVICE=todo-postgres

# -----------------------------------
# Docker Configuration
# -----------------------------------
DOCKER_REGISTRY=ghcr.io/yourorg  # Change to your registry
IMAGE_TAG=latest

# -----------------------------------
# AI Tools (Optional)
# -----------------------------------
OPENAI_API_KEY=sk-...  # For kubectl-ai and AI features

# -----------------------------------
# Monitoring & Observability (Optional)
# -----------------------------------
PROMETHEUS_ENABLED=false
GRAFANA_ENABLED=false

# -----------------------------------
# Feature Flags
# -----------------------------------
FEATURE_REMINDERS_ENABLED=true
FEATURE_AI_CHATBOT_ENABLED=true
FEATURE_RECURRING_TASKS_ENABLED=true

# -----------------------------------
# Development Settings
# -----------------------------------
DEBUG=false
HOT_RELOAD=true

