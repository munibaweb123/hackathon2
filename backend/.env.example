# ===========================================
# Todo Web Backend - Environment Configuration
# ===========================================
# Copy this file to .env and fill in your values

# Application Settings
APP_NAME="Todo Web API"
APP_VERSION="1.0.0"
DEBUG=false

# ===========================================
# Database - Neon Serverless PostgreSQL
# ===========================================
# Get your connection string from Neon Console:
# https://console.neon.tech -> Select Project -> Connection Details
# Format: postgresql://user:password@host/database?sslmode=require
DATABASE_URL=postgresql://user:password@your-project-id.neon.tech/neondb?sslmode=require

# ===========================================
# Authentication - Better Auth (Cookie-based)
# ===========================================
# URL where Better Auth runs (your Next.js frontend)
# Backend calls this URL to validate session cookies
BETTER_AUTH_URL=http://localhost:3000

# Secret key (kept for potential JWT fallback)
BETTER_AUTH_SECRET=your-super-secret-key-at-least-32-characters-long

# ===========================================
# CORS - Frontend Origins
# ===========================================
# Comma-separated list of allowed origins
# For development: http://localhost:3000
# For production: https://your-domain.com
CORS_ORIGINS=["http://localhost:3000"]

# ===========================================
# API Configuration
# ===========================================
API_PREFIX=/api

# ===========================================
# OpenAI API Configuration
# ===========================================
# OpenAI API key for AI agent
OPENAI_API_KEY=your-openai-api-key-here

# LLM provider (openai or gemini)
LLM_PROVIDER=openai

# Default model to use
OPENAI_DEFAULT_MODEL=gpt-4o-mini

# ===========================================
# AI Configuration
# ===========================================
# Whether to use verbose logging for AI interactions
VERBOSE_AI_LOGGING=false

# ===========================================
# ChatKit Configuration
# ===========================================
# Domain key from ChatKit dashboard (https://chatkit.app)
CHATKIT_DOMAIN_KEY=your-chatkit-domain-key
